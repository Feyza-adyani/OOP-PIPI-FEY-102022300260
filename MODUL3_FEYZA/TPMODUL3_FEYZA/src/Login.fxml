<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="LoginController">
    <children>
        <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" 
               AnchorPane.topAnchor="30" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150"/>

        <Label text="Username:" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="100"/>
        <TextField fx:id="usernameField" prefWidth="200" promptText="Enter Username" 
                   AnchorPane.topAnchor="120" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100"/>

        <Label text="Password:" AnchorPane.topAnchor="160" AnchorPane.leftAnchor="100"/>
        <PasswordField fx:id="passwordField" prefWidth="200" promptText="Enter Password" 
                       AnchorPane.topAnchor="190" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100"/>

        <Button text="Login" onAction="#handleLogin" prefWidth="100" 
                AnchorPane.topAnchor="230" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150"/>
    </children>
</AnchorPane>

